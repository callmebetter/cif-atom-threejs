{
  "categories": {
    "correctness": "warn",
    "suspicious": "warn",
    "pedantic": "allow",
    "style": "allow",
    "restriction": "allow",
    "nursery": "allow"
  },
  "plugins": ["vue", "typescript"],
  "settings": {
    "vue": {
      "blocks": ["script", "template", "style"]
    }
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "globals": [],
  "include": [ "src/**/*.{ts,js,vue}"],
  "ignore": [
    "dist/**",
    "dist-electron/**",
    "coverage/**",
    "node_modules/**",
    "release/**",
    "*.config.js",
    "*.config.ts",
    "scripts/**",
    "*.test.ts",
    "*.spec.ts",
    "**/__tests__/**",
    "docs/**"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "vue/no-unused-vars": "error",
    "vue/no-mutating-props": "error",
    "vue/require-default-prop": "error",
    "vue/require-prop-types": "error",
    "vue/multi-word-component-names": "off",
    "no-console": "warn",
    "no-debugger": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "error"
  }
}