{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"]
    }
  },
  "include": ["electron/**/*", "src/backend/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer"]
}