{
  "name": "crystallography-image-tool",
  "version": "1.0.0",
  "description": "晶体学与微观图像科研辅助工具",
  "main": "dist/main.js",
  "scripts": {
    "dev": "node scripts/dev.js start",
    "dev:vite": "vite",
    "dev:electron": "node scripts/dev.js electron",
    "dev:check-quick": "node scripts/error-detector.js",
    "dev:analyze-deep": "node scripts/advanced-monitor.js",
    "build": "node scripts/build.js build",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "build:dir": "electron-builder --dir",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "dev:setup": "node scripts/dev.js setup",
    "dev:check": "node scripts/dev.js check",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting specified\" && exit 0",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "crystallography",
    "microscopy",
    "image-analysis",
    "electron",
    "vue3"
  ],
  "author": "Crystallography Research Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.22",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pako": "^2.0.4",
    "@types/three": "^0.181.0",
    "better-sqlite3": "^12.4.1",
    "element-plus": "^2.4.4",
    "pako": "^2.1.0",
    "pinia": "^2.1.7",
    "sqlite3": "^5.1.6",
    "three": "^0.160.0",
    "tiff.js": "^1.0.0",
    "utif": "^3.1.0",
    "vue": "^3.3.9",
    "vue-router": "^4.2.5"
  },
  "build": {
    "appId": "com.crystallography.image-mesh",
    "productName": "Image-Mesh",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.science",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Science"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Image-Mesh",
      "include": "assets/installer.nsh"
    },
    "dmg": {
      "title": "Image-Mesh 安装程序",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "image-mesh"
    }
  }
}
