{
  "name": "crystallography-image-tool",
  "version": "1.0.0",
  "description": "晶体学与微观图像科研辅助工具",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && npx electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "build:dir": "electron-builder --dir",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "crystallography",
    "microscopy",
    "image-analysis",
    "electron",
    "vue3"
  ],
  "author": "Crystallography Research Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.1",
    "electron-vite": "^4.0.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.22",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "element-plus": "^2.4.4",
    "pinia": "^2.1.7",
    "sqlite3": "^5.1.6",
    "three": "^0.159.0",
    "tiff.js": "^1.0.0",
    "utif": "^3.1.0",
    "vue": "^3.3.9",
    "vue-router": "^4.2.5"
  }
}
